  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [88],
    "editor.formatOnType": true
  },
  "flake8.args": ["--ignore=E203,W503", "--max-line-length=88"],
  "autoDocstring.docstringFormat": "one-line-sphinx"
}
